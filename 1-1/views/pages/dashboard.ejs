<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Dashborad</title>
</head>
<body>
    <table>
        <caption>user info</caption>
        <thead>
            <% let keys = Object.keys(JSON.parse(JSON.stringify(user))) %>
            <% for (let i of keys) { %>
                <th><%= i %></th>
            <% } %>
        </thead>
        <tbody>
            <% let values = Object.entries(JSON.parse(JSON.stringify(user))) %>
            <% for (let i of values) { %>
                <th id=<%= i[0]%>><%= i[1] %></th>
            <% } %>
        </tbody>
    </table>

    <p>Hello <%= user.firstName + " " + user.lastName %>!</p>

    <br>
    <br>
    <form action="/user/logout" method="get" id="logout-user">
        <input type="submit" value="logout">
    </form>

    <form id="update-user">
        <label for="update-user-firstName">firstName</label>
        <input type="text" id="update-user-firstName" minlength="3" maxlength="30">
        <br>
        <label for="update-user-lastName">lastName</label>
        <input type="text" id="update-user-lastName" minlength="3" maxlength="30">
        <br>
        <label for="update-user-password">password</label>
        <input type="password" id="update-user-password"  minlength="8">
        <br>
        <label for="update-user-gender">gender</label>
        <select id="update-user-gender" value="not-set" selected>
            <option value="male">male</option>
            <option value="female">female</option>
            <option value="not-set">not-set</option>
        </select>
        <label for="update-user-role">role</label>
        <select id="update-user-role" value="user" selected>
            <option value="admin">admin</option>
            <option value="user">user</option>
        </select>
        <input type="submit" value="Update user">
    </form>

    <form id="delete-user"> 
        <input type="submit" value="delete user">
    </form>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/functions.js"></script>
</body>
</html>